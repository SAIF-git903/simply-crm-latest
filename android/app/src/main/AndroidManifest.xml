<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.simplycrm.mobileappnew">

  <uses-permission android:name="android.permission.INTERNET" />
  
  <!-- Camera permission: Required for taking photos to attach to CRM records -->
  <uses-permission android:name="android.permission.CAMERA"/>
  
  <!-- Photo library permissions: Required for selecting images from gallery to attach to CRM records -->
  <!-- For Android 10-12 (API 29-32), use READ_EXTERNAL_STORAGE -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
  
  <!-- Media location permission: Required for accessing location metadata in photos (EXIF data) when attaching photos to records -->
  <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
  
  <!-- Location permissions: Required for location-based CRM features -->
  <uses-permission android:name="android.permission.CAMERA"/>
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  
  <!-- Notification permission: Required for push notifications -->
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
  
  <!-- NFC permission: Required for NFC functionality if used -->
  <uses-permission android:name="android.permission.NFC" />


  <application android:name=".MainApplication" android:label="@string/app_name" android:icon="@mipmap/ic_launcher" android:roundIcon="@mipmap/ic_launcher_round" android:allowBackup="false" android:theme="@style/AppTheme" android:supportsRtl="true" android:usesCleartextTraffic="true">
    <uses-library android:name="org.apache.http.legacy" android:required="false" />
    <activity android:name=".MainActivity" android:label="@string/app_name" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode" android:launchMode="singleTask" android:windowSoftInputMode="stateAlwaysHidden|adjustPan" android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>
</manifest>
